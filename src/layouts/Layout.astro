---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background-clr: #07446b;
    --brigadier-blue-clr: #0862a0;
    --whales-tail-clr: #0f5887;
    --dark-imperial-blue-clr: #07446b;
    --skyan-clr: #68d2ff;
    --skyan-clr-hover: #4fc2ff;
  }

  * {
    padding: 0;
    margin: 0;
  }
  html {
    box-sizing: border-box;
    font-family: system-ui, sans-serif;
    background-color: var(--background-clr);
    color: white;
  }

  body {
    min-height: 100vh;
    position: relative;
  }
</style>
